<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/enter_phone_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Phone Number"
        android:inputType="phone"/>

    <Button
        android:id="@+id/call_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Call"/>

    <EditText
        android:id="@+id/url_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter an URL to Open"
        android:inputType="text" />
    <Button
        android:id="@+id/url_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Open URL" />

    <EditText
        android:id="@+id/email_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter the E Mail Address"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/email_subject"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter the Subject"
        android:inputType="textEmailSubject" />

    <EditText
        android:id="@+id/email_body"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter the Body of the E Mail" />

    <Button
        android:id="@+id/email_btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Send E Mail" />

</LinearLayout>